generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

enum ItemType {
  issue
  feature
}

enum ItemStatus {
  open
  in_progress
  resolved
  archived
}

enum ItemPriority {
  low
  medium
  high
  critical
}

enum CategoryKind {
  issue
  feature
  other
}

model Project {
  id          String   @id @default(cuid())
  ownerId     String?
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  owner           User?            @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  items           Item[]
  promptTemplates PromptTemplate[]

  @@index([ownerId])
}

model Category {
  id        String       @id @default(cuid())
  name      String       @unique
  kind      CategoryKind @default(other)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  items Item[]
}

model Item {
  id         String       @id @default(cuid())
  ownerId    String?
  projectId  String
  categoryId String?
  type       ItemType
  title      String
  description String
  status     ItemStatus   @default(open)
  priority   ItemPriority @default(medium)
  tags       String[]     @default([])
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  owner    User?     @relation(fields: [ownerId], references: [id], onDelete: SetNull)
  project  Project   @relation(fields: [projectId], references: [id], onDelete: Restrict)
  category Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  images   ItemImage[]

  @@index([ownerId])
  @@index([projectId])
  @@index([categoryId])
  @@index([type])
  @@index([status])
}

model ItemImage {
  id           String   @id @default(cuid())
  itemId       String
  filename     String
  mimeType     String
  sizeBytes    Int
  relativePath String
  sortOrder    Int      @default(0)
  createdAt    DateTime @default(now())

  item Item @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId, sortOrder])
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  displayName  String?
  role         UserRole @default(USER)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  projects Project[]
  items    Item[]
}

model PromptTemplate {
  id        String       @id @default(cuid())
  projectId String
  kind      CategoryKind
  template  String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, kind])
  @@index([projectId])
}
